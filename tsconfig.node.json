{
    "compilerOptions": {
      "target": "ES6",
      "resolveJsonModule": true,

      "composite": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist-node",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true

    },
    "include": ["vite.config.ts"],
    "exclude": ["node_modules"]
}
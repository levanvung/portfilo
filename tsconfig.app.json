{
    "compilerOptions": {
      "jsx": "react",
      "target": "ES6",
      "composite": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist-node",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  
{
    "compilerOptions": {
      "jsx": "react",
      "target": "ES6",
      "resolveJsonModule": true,
      "composite": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./dist-node",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "baseUrl": ".",
      "paths": {
        "src/*": ["src/*"],
      }
    },

    "include": ["src/**/*",    "src/assets/lottie/code.json",
    "src/assets/lottie/coding.json"

  ],
    "exclude": ["node_modules"]
  }
  